{
    "manifest_version": 2,
    "name": "STOP n GO",
    "version": "1.0.0",

    "default_locale": "ko",
    "description": "웨일 브라우저를 위한 스탑워치.",
    "icons": {"16": "png/stopngoXhsw16.png", "128": "png/stopngoXhsw128.png"},
  
    "sidebar_action": {
      "default_page" : "index.html",
      "default_icon" : {
        "16" : "png/stopngoXhsw16.png"
      },
      "default_title" : "STOP n GO"
    },
  
    "author": "hsw",
    "background": {
      "scripts" : ["js/stopwatch.js", "js/currentTime.js"],
      "persistent": false
    },

    "chrome_ui_overrides": {
      "bookmarks_ui": {
        "remove_bookmark_shortcut": true,
        "remove_button": true
      }
    },
    "commands": {
      "_execute_page_action" : {
        "suggested_key" : {
          "default_key" : "Ctrl+Shift+C",
          "windows" : "Ctrl+Shift+C",
          "mac" : "Command+Shift+C"
        }
      }
    }
  }
  